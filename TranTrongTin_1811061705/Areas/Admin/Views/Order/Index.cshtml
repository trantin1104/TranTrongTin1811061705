@model List<TranTrongTin_1811061705.Models.Order>

<div class="features-title text-center">
    <h2>DANH SÁCH ĐƠN HÀNG</h2>
</div>

<table class="table table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Người đặt hàng</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>            
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td>@order.TotalPrice.ToString("N0") VNĐ</td>
                <td class="d-flex align-items-center gap-2">
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm"> Xem </a>
                    <form asp-action="Delete" method="post" asp-route-id="@order.Id"
                          onsubmit="return confirm('Bạn có chắc muốn xóa đơn hàng này?');">
                        <button type="submit" class="btn btn-danger btn-sm"> Xóa </button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
