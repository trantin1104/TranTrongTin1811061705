@model TranTrongTin_1811061705.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="features-title text-center">
    <h2>XÓA SẢN PHẨM</h2>
</div>

<div class="alert alert-warning text-center">
    <p>Bạn có chắc chắn muốn xóa sản phẩm này không?</p>
    <h4 class="text-primary">Tên sản phẩm: @Model.Name</h4>
    <h5>Giá: @Model.Price VNĐ</h5>
</div>

<form asp-action="DeleteConfirmed" method="post" class="text-center">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
