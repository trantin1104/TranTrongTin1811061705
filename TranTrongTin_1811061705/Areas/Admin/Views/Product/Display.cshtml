@model TranTrongTin_1811061705.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="features-title text-center">
    <h2>CHI TIẾT SẢN PHẨM</h2>
</div>

<div class="border rounded p-3 shadow-sm">
    <div class="row">
        <div class="col-md-4 ">
            <!-- Hiển thị ảnh sản phẩm -->
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                    <img src="@Model.ImageUrl" alt="Ảnh sản phẩm" class="img-fluid rounded" style="max-width: 100%; height: auto;" />
            }
            else
            {
                    <p class="text-muted">Không có hình ảnh</p>
            }
        </div>
        <div class="col-md-8 ">
            <h3 class="mb-3">@Model.Name</h3>
            <p><strong>Giá:</strong> @Model.Price.ToString("N0") VNĐ</p>
            <p><strong>Danh mục:</strong> @Model.Category?.Name</p> 
            <p><strong>Mô tả:</strong> @Model.Description</p>
        </div>
    </div>
</div>


<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning ms-2">Sửa sản phẩm</a>
</div>

