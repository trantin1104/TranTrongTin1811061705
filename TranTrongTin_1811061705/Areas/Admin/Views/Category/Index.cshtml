@model IEnumerable<TranTrongTin_1811061705.Models.Category>

@{
    ViewData["Title"] = "Danh sách danh mục";
}

<div class="features-title text-center">
    <h2>DANH SÁCH DANH MỤC</h2>
</div>

<a asp-action="Add" class="btn btn-primary mb-3">Thêm danh mục</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này không?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
